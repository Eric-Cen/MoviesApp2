<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_play_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_play_arrow_black_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"



            />

        <TextView
            android:id="@+id/tv_video_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_play_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_play_image"
            app:layout_constraintBottom_toBottomOf="@+id/iv_play_image"
            tools:text="video title"
            android:maxLines="2"

            android:layout_marginLeft="24dp"

            />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorLightGreen"
            android:id="@+id/view_video"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_play_image"
            app:layout_constraintLeft_toLeftOf="@+id/iv_play_image"
            android:layout_marginTop="16dp"

            />


</android.support.constraint.ConstraintLayout>
